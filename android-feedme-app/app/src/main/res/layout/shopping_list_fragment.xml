<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".ui.shoppinglist.ShoppingListFragment">

    <ScrollView
        android:id="@+id/shoppoing_list_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/current_shopping_list_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginStart="@dimen/medium_text_margin"
                    android:layout_marginEnd="@dimen/medium_text_margin"
                    android:layout_marginBottom="@dimen/medium_text_margin"
                    android:background="@drawable/custom_background_shopping_card"
                    android:clickable="false"
                    android:foregroundGravity="top"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    app:layout_constraintBottom_toTopOf="@+id/old_shopping_list_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    card_view:cardElevation="@dimen/medium_card_elevation"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/current_shopping_list_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_cardview_margin"
                        android:orientation="vertical">

                        <!-- IngredientList Child Fragment -->
                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/current_shopping_list_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </androidx.fragment.app.FragmentContainerView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/old_shopping_list_title"
                    android:text="@string/lastboughtproductstitle"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_large"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginEnd="@dimen/medium_text_margin"
                    android:layout_marginStart="@dimen/medium_text_margin"
                    android:layout_marginBottom="@dimen/medium_text_margin"
                    android:layout_marginTop="@dimen/medium_text_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/current_shopping_list_card_view"     />

                    <LinearLayout
                        android:id="@+id/old_shopping_list_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/small_cardview_margin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/old_shopping_list_title">

                        <!-- IngredientList Child Fragment -->
                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/old_shopping_list_fragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </androidx.fragment.app.FragmentContainerView>

                    </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/container_for_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/large_text_margin"
        android:layout_marginEnd="@dimen/super_large_text_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_create_new_product_for_shopping_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/salmon_red"
            android:layout_margin="@dimen/tiny_btn_margin"
            android:layout_gravity="bottom|center"
            android:contentDescription="@string/add_new_product_to_inventory"
            app:srcCompat="@drawable/ic_addproducts" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>