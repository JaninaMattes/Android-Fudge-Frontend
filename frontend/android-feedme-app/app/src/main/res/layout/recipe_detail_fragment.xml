<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.recipedetail.RecipeDetailFragment">

    <!-- Header View -->

    <ScrollView
        android:id="@+id/recipe_detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/recipe_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="137dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pizza"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_recipe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/super_large_text_margin"
                    android:layout_marginTop="@dimen/large_text_margin"
                    android:layout_marginEnd="@dimen/super_large_text_margin"
                    android:layout_marginBottom="@dimen/large_text_margin"
                    android:text="Rezept Informationen"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recipe_detail_image" />

                <TextView
                    android:id="@+id/text_recipe_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/super_large_text_margin"
                    android:layout_marginTop="@dimen/tiny_text_margin"
                    android:layout_marginRight="@dimen/super_large_text_margin"
                    android:layout_marginBottom="@dimen/super_large_text_margin"
                    android:text="@string/example_description"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_recipe_name" />

                <LinearLayout
                    android:id="@+id/card_view_information_container"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/small_text_margin"
                    android:paddingEnd="@dimen/small_text_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_recipe_subtitle">

                    <!-- Recipe Detail Information -->

                    <include
                        layout="@layout/recipe_detail_information_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_text_margin"
                        android:layout_marginTop="@dimen/small_text_margin"
                        android:layout_marginEnd="@dimen/small_text_margin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_view_information_container">

                    <!-- Recipe Detail InformationView -->

                    <include
                        layout="@layout/recipe_detail_scroll_view"
                        android:layout_width="match_parent"
                        android:layout_height="741dp"
                        android:layout_marginStart="@dimen/small_text_margin"
                        android:layout_marginEnd="@dimen/small_text_margin" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Custom Floating Button -->
            <FrameLayout
                android:id="@+id/container_for_floating_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="@dimen/small_text_margin"
                android:layout_marginBottom="@dimen/small_text_margin">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/button_export_ingredients_to_shoppinglist"
                    android:layout_width="177dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/tiny_text_margin"
                    android:layout_marginStart="@dimen/tiny_text_margin"
                    android:layout_marginEnd="@dimen/tiny_text_margin"
                    android:backgroundTint="@color/red_200"
                    android:clickable="true"
                    android:elevation="@dimen/medium_card_elevation"
                    android:src="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/small_text_margin"
                    android:elevation="16dp"
                    android:text="@string/button_share_ingredients"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_medium" />

            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>