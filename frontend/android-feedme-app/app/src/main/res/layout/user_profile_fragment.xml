<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.profile.UserProfileFragment">

    <ScrollView
        android:id="@+id/user_profile_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_cardview_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/user_profile_card_view_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                layout="@layout/user_profile_header"/>

            <include
                android:id="@+id/user_profile_card_view_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_profile_card_view_one"
                layout="@layout/user_profile_recipe_settings"/>

            <include
                android:id="@+id/user_profile_card_view_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_profile_card_view_two"
                layout="@layout/user_profile_app_settings"/>

            <FrameLayout
                android:id="@+id/container_for_user_edit_floating_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_text_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_card_view_three"
                android:layout_gravity="center">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_edit_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red_200"
                    android:layout_marginStart="@dimen/tiny_text_margin"
                    android:layout_marginEnd="@dimen/tiny_text_margin"
                    android:src="@android:color/transparent"
                    android:clickable="true"
                    android:visibility="visible"
                    android:elevation="@dimen/medium_card_elevation"
                    android:contentDescription="@string/content_description_edit_product"
                    android:text="@string/profil_bearbeiten"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_baseline_create_24"
                    app:iconTint="@color/white"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_text_margin"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_profile_card_view_three">

                <FrameLayout
                    android:id="@+id/container_for_floating_button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/small_text_margin"
                    android:layout_marginEnd="@dimen/large_text_margin">

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/btn_save_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/tiny_text_margin"
                        android:layout_marginStart="@dimen/tiny_text_margin"
                        android:layout_marginEnd="@dimen/tiny_text_margin"
                        android:backgroundTint="@color/red_200"
                        android:clickable="true"
                        android:contentDescription="@string/content_description_edit_product"
                        android:elevation="@dimen/medium_card_elevation"
                        android:gravity="center"
                        android:padding="2dp"
                        android:visibility="invisible"
                        android:src="@android:color/transparent"
                        android:text="Speichern"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/container_for_floating_button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/large_text_margin"
                    android:layout_marginTop="@dimen/small_text_margin">

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/btn_cancel_save_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/tiny_text_margin"
                        android:layout_marginStart="@dimen/tiny_text_margin"
                        android:layout_marginEnd="@dimen/tiny_text_margin"
                        android:backgroundTint="@color/red_200"
                        android:clickable="true"
                        android:contentDescription="@string/content_description_edit_product"
                        android:elevation="@dimen/medium_card_elevation"
                        android:gravity="center"
                        android:padding="2dp"
                        android:visibility="invisible"
                        android:src="@android:color/transparent"
                        android:text="Abbrechen"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </FrameLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
